<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body>
	<%- include('partials/header') %> 

	<div class="banner"></div>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Based on your last visit</h2>
			</div>
			<% visited.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= product.id %>/<%= product.category %>">
							<figure class="product-box_image">
								<img src="/images/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= (product.price - product.price * product.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></h2>
								<% if (product.discount != 0) { %>
									<span><%= product.discount %>% OFF </span>
								<% } %>
								<p><%= product.description %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">On Sale</h2>
			</div>
			<% onSale.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= product.id %>/<%= product.category %>">
							<figure class="product-box_image">
								<img src="/images/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= (product.price - product.price * product.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %> </h2>
								<% if (product.discount != 0) { %>
									<span><%= product.discount %>% OFF </span>
								<% } %>
								<p><%= product.description %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>

  <%- include('partials/footer') %> 
</body>
</html>